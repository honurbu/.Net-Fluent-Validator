@model FluentValidation.Web.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EMail" class="control-label"></label>
                <input asp-for="EMail" class="form-control" />
                <span asp-validation-for="EMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthdayDate" class="control-label"></label>
                <input type="date" asp-for="BirthdayDate" class="form-control" />
                <span asp-validation-for="BirthdayDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <br />
            <h4>Address</h4>
            @for (int i = 0; i < 2; i++)
            {


                @if (i == 0)
                {
                    <h5>Home Address</h5>
                }
                else
                {
                    <h5>Job Address</h5>
                }
                <div class="form-group">
                    <label asp-for="Addresses[i].Content" class="control-label"></label>
                    <input asp-for="Addresses[i].Content" class="form-control" />
                    <span asp-validation-for="Addresses[i].Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Addresses[i].Province" class="control-label"></label>
                    <input asp-for="Addresses[i].Province" class="form-control" />
                    <span asp-validation-for="Addresses[i].Province" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Addresses[i].Postcode" class="control-label"></label>
                    <input asp-for="Addresses[i].Postcode" class="form-control" />
                    <span asp-validation-for="Addresses[i].Postcode" class="text-danger"></span>
                </div>

            }
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
